@model DIS.ViewModels.RegisterModel

<h2>Регистрация</h2>

<form asp-action="Register" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div>
            <label asp-for="FIO">ФИО</label><br />
            <input type="text" asp-for="FIO" />
            <span asp-validation-for="FIO" />
        </div>
        <div>
            <label asp-for="PassportSeries">Введите серию паспорта</label><br />
            <input type="number" asp-for="PassportSeries" />
            <span asp-validation-for="PassportSeries" />
        </div>
        <div>
            <label asp-for="PassportNumber">Введите номер паспорта</label><br />
            <input type="number" asp-for="PassportNumber" />
            <span asp-validation-for="PassportNumber" />
        </div>
        <div>
            <label asp-for="Login">Введите логин</label><br />
            <input type="text" asp-for="Login" />
            <span asp-validation-for="Login" />
        </div>
        <div>
            <label asp-for="Password">Введите пароль</label><br />
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div>
            <label asp-for="ConfirmPassword">Повторите пароль</label><br />
            <input asp-for="ConfirmPassword" />
            <span asp-validation-for="ConfirmPassword" />
        </div>
        <div>
            <input type="submit" value="Регистрация" />
        </div>
    </div>
</form>
